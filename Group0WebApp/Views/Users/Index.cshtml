<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <title>Registration</title>
</head>
<body>
    <div class="wrapper">
        <h2>Login</h2>
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="error-message">
                @ViewData["ErrorMessage"]
            </div>
        }
        <form id="registrationForm" method="POST" action="/Users/Login">

            <div class="input-box">
                <input type="text" name="Username" id="username" placeholder="Enter User name" required>
            </div>
            <div class="input-box">
                <input type="password" name="Password" id="password" placeholder="Enter password" required>
            </div>
            <div class="policy">
                <input type="checkbox" name="terms" required>
                <h3>I accept all terms & condition</h3>
            </div>
            <div class="input-box button">
                <input type="Submit" name="submit" value="Login Now">
            </div>
            <div id="errorMessages" style="color: red; margin-top: 10px;"></div>
            <div class="text">
                <h3>donot have an account? <a asp-action="signup">signup now</a></h3>
            </div>
        </form>
    </div>
</body>
</html>
